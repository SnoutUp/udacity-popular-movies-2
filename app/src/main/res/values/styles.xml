<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
    </style>

    <style name="MovieTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/dimen_movie_title_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MovieSubtitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="MovieDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MovieYearLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_movie_year_size</item>
    </style>

    <style name="MovieInfoLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="MovieGenreLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>

    </style>


    <style name="ReviewAuthor" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewContent" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
